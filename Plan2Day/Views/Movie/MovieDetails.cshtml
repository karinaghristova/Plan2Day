@using Plan2Day.Core.Models.Movies
@using System.Collections.Generic
@model MovieListViewModel
@{
}

<!-- Main content -->
<section class="content">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">@Model.Title</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Movie" asp-action="wanttowatchmovies">All movies</a></li>
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Movie" asp-action="wanttowatchmovies">Watch list</a></li>
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Movie" asp-action="watchedmovies">Watched movies</a></li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Default box -->
    <div class="card card-solid">
        <div class="card-body pb-0">
            <div class="row">

                <div class="col-12 d-flex align-items-stretch flex-column">
                    <div class="card bg-light d-flex flex-fill">
                        <div class="card-header text-muted border-bottom-0">
                            <h3>@Model.Title</h3>
                        </div>
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-7">
                                    <h2 class="lead"><b>Year: @Model.Year</b></h2>
                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li class="big row"><span class="fa-li"><i class="fas fa-clock"></i></span>Runtime: @Model.Runtime minutes</li>
                                        @{
                                            var genres = new List<string>();
                                            foreach (var genre in Model.Genres)
                                            {
                                                genres.Add(genre.Name);
                                            }
                                        }
                                        <li class="big row"><span class="fa-li"><i class="fas fa-film"></i></span>Genres: @string.Join(", ", genres)</li>
                                        <li class="big row">
                                            <span class="fa-li"><i class="fas fa-info-circle"></i></span>
                                            Plot: @Model.Plot
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-5 text-center">
                                    <img src="@Model.ImageUrl" alt="user-avatar" class="img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-right">
                                <a href="@Url.Action("AddMovieToWantToWatch", "Movie", new {movieId = @Model.Id})" class="btn btn-sm btn-primary">
                                    <i class="fas fa-user"></i> Add to watch list
                                </a>
                                <a href="@Url.Action("AddMovieToWatched", "Movie", new {movieId = @Model.Id})" class="btn btn-sm btn-primary">
                                    <i class="fas fa-user"></i> Watched
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.card-body -->
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->

</section>
<!-- /.content -->