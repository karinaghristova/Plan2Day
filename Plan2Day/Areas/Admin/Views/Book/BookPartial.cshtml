@using Plan2Day.Core.Models.Books
@model BookListViewModel
@{
}

<div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
    <div class="card bg-light d-flex flex-fill">
        <div class="card-header text-muted border-bottom-0">
            <h3>@Model.Title</h3>
        </div>
        <div class="card-body pt-0">
            <div class="row">
                <div class="col-7">
                    <h2 class="lead"><b>Author: @Model.Author</b></h2>
                    <ul class="ml-4 mb-0 fa-ul text-muted">
                        <li class="small row"><span class="fa-li"><i class="fas fa-clock"></i></span>Year: @Model.Year</li>
                        <li class="small row"><span class="fa-li"><i class="fas fa-barcode"></i></i></span>ISBN: @Model.Isbn13</li>
                        <li class="small row"><span class="fa-li"><i class="fas fa-file"></i></span>Pages: @Model.Pages</li>
                    </ul>
                </div>
                <div class="col-5 text-center">
                    <img src="@Model.ImageUrl" alt="user-avatar" class="img-fluid">
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="text-right">
                <a href="@Url.Action("EditBook", "Book", new {bookId = @Model.Id})" class="btn btn-sm btn-primary">
                    <i class="fas fa-user"></i> Edit book
                </a>
                <a href="@Url.Action("DeleteBook", "Book", new {bookId = @Model.Id})" class="btn btn-sm btn-primary">
                    <i class="fas fa-user"></i> Delete book
                </a>
            </div>
        </div>
    </div>
</div>
