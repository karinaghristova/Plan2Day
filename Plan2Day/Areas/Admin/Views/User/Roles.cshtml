@using Plan2Day.Core.Models
@model UserRolesViewModel
@{
    ViewData["Title"] = "User Roles";
}

<div class="row">
    <div class="col-4">
        <form id="roles" method="post">
            <input type="hidden" name="Id" value="@Model.UserId"></input>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <h3>User: @Html.DisplayFor(m => m.Name)</h3>
            </div>
            <div class="form-group" data-select2-id="51">
                <label>Select Multiple</label>
                <select asp-for="RoleIds" class="select2 select2-hidden-accessible" multiple="" data-placeholder="Select a State" style="width: 100%;" data-select2-id="7" tabindex="-1" aria-hidden="true">
                    @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.RoleItems)
                    {
                        <option value="@item.Value" selected="@(item.Selected ? "selected" : "")">@item.Text</option>
                    }
                </select>
            </div>
            <div class="row">
                <!-- /.col -->
                <div class="col-4">
                    <button id="roles-submit" type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
    </div>
</div>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}