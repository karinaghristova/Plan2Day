@using Plan2Day.Core.Models
@model UserEditViewModel
@{
    ViewData["Title"] = "Edit user";
}
<div class="row">
    <div class="col-4">
        <form id="edit" method="post">
            <input type="hidden" name = "Id" value="@Model.Id"></input>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" placeholder="First name" aria-required="true" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" placeholder="Last name" aria-required="true" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <!-- /.col -->
                        <div class="col-4">
                            <button id="edit-submit" type="submit" class="btn btn-primary btn-block">Submit</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}